<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rc_button_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
    android:paddingStart="?android:attr/listPreferredItemPaddingStart">
    <ImageView
        android:id="@+id/rc_button_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/rc_blank"/>
    <TextView
        android:id="@+id/rc_button_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="?android:attr/listPreferredItemPaddingStart"
        android:layout_toEndOf="@id/rc_button_image"
        android:layout_alignTop="@id/rc_button_image"
        android:textSize="24sp"
        android:padding="8dp"
        tools:text="Name"/>
    <TextView
        android:id="@+id/rc_button_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="?android:attr/listPreferredItemPaddingStart"
        android:layout_toEndOf="@id/rc_button_image"
        android:layout_alignBottom="@id/rc_button_image"
        android:textSize="16sp"
        android:padding="8dp"
        tools:text="Code"/>
</RelativeLayout>
